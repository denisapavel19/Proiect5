<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - After School</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proiect5.styles.css" asp-append-version="true" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #d8bfd8;
            color: #fff;
        }

        h1 {
            color: #fff;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            padding: 20px;
        }

        tbody tr:last-child {
            background-color: #ffc0cb;
        }

        tbody tr:nth-child(even) {
            background-color: #f0e6f5;
        }

        th, td {
            color: #fff;
        }

        .button.create,
        .button.back {
            background-color: #d8bf;
            color: #fff;
            text-decoration: none;
            padding: 8px 16px;
            border-radius: 4px;
            display: inline-block;
            margin-right: 5px;
            cursor: pointer;
        }

            .button.create:hover,
            .button.back:hover {
                background-color: #d8bf;
            }

        .custom-banner {
            background-color: #d8bfd8;
            text-align: center;
            padding: 20px;
            width: 100%;
            height: 10%; 
            overflow: hidden;
            position: relative;
        }

            .custom-banner img {
                border-radius: 5px;
                width: 100%;
                height: auto;
                filter: opacity(0.8);
                
                object-fit: cover;
                object-position: center top;
            }

        .navbar {
            background-color: #f8f9fa;
            padding: 15px;}
        .banner-text

        {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: #d8bf;
            font-size: 50px;
            font-weight: bold;
            text-align: center;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
    </style>

</head>
<body>
@RenderSection("CustomBanner", required: false);
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">After School</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Acasă</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Profesori/Index">Profesori</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/MateriiProfesori/Index">Listă orar și tarife</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Reviews/Index">Review</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Programari/Index">Programări</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Elevi/Index">Elevi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        
                    </ul>
                    
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
        <div class=" custom-banner">
            <img src="~/images/poza2.jpg" alt="Înscriere After School" />
        </div>
        <div class="banner-text">
            Bun venit la After School!
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    

    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>