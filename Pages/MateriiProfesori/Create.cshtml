@page
@model Proiect5.Pages.MateriiProfesori.CreateModel

@{
    ViewData["Title"] = "Create";
}
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        background-color: #d8bfd8;
        color: #fff;
    }

    h1 {
        color: #fff;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        padding: 20px;
    }

    tbody tr:last-child {
        background-color: #ffc0cb;
    }

    tbody tr:nth-child(even) {
        background-color: #f0e6f5;
    }

    th, td {
        color: #fff;
    }

    .button.create,
    .button.back {
        background-color: #d8bf;
        color: #fff;
        text-decoration: none;
        padding: 8px 16px;
        border-radius: 4px;
        display: inline-block;
        margin-right: 5px;
        cursor: pointer;
    }

        .button.create:hover,
        .button.back:hover {
            background-color: #d8bf;
        }
</style>
<h1>Adaugă orar profesor</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaterieProfesor.sedinta_fizica" class="control-label"></label>
                <input asp-for="MaterieProfesor.sedinta_fizica" class="form-control" />
                <span asp-validation-for="MaterieProfesor.sedinta_fizica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaterieProfesor.sedinta_online" class="control-label"></label>
                <input asp-for="MaterieProfesor.sedinta_online" class="form-control" />
                <span asp-validation-for="MaterieProfesor.sedinta_online" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaterieProfesor.tarif" class="control-label"></label>
                <input asp-for="MaterieProfesor.tarif" class="form-control" />
                <span asp-validation-for="MaterieProfesor.tarif" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="MaterieProfesor.profesorid" class="control-label"></label>
                <select asp-for="MaterieProfesor.profesorid" class="form-control" asp-items="ViewBag.profesorid"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaterieProfesor.materieid" class="control-label"></label>
                <select asp-for="MaterieProfesor.materieid" class="form-control" asp-items="ViewBag.materieid"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Adaugă" class="btn btn-primary button create" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" class="button back">Înapoi</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
