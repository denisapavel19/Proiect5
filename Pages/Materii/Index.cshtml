@page
@model Proiect5.Pages.Materii.IndexModel

@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        background-color: #d8bfd8;
    }

    h1 {
        color: #fff;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        padding: 20px;
    }


    table, th, td {
        border: 1px solid #d8bf;
    }

    th, td {
        padding: 12px;
        text-align: left;
        color: #fff;
    }

    thead {
        background-color: #ffc0cb;
    }

    tbody tr:nth-child(even) {
        background-color: #d8bfd8;
    }

    a.button.create {
        background-color: #d8bf;
    }

        a.button.create:hover {
            background-color: #d8bf;
        }

    a.button {
        text-decoration: none;
        color: #fff;
        padding: 8px 16px;
        border-radius: 4px;
        display: inline-block;
        margin-right: 5px;
        cursor: pointer;
    }

        a.button.edit {
            background-color: #d8bf;
        }

        a.button.details {
            background-color: #d8bf;
        }

        a.button.delete {
            background-color: #d8bf;
        }
</style>
<h1>Listă materii</h1>

<p>
    <a asp-page="Create" class="button create">
        Adaugă materie
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Materie[0].denumire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Materie[0].nivel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Materie[0].clasa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Materie)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.denumire)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nivel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.clasa)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.id" class="button edit">Editare</a>
                    <a asp-page="./Details" asp-route-id="@item.id" class="button details">Detalii</a>
                    <a asp-page="./Delete" asp-route-id="@item.id" class="button delete">Ștergere</a>
                </td>
            </tr>
        }
    </tbody>
</table>
